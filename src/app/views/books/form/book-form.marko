<html>
	<body>
		<h1>Book's register</h1>
		<form action="/books/form" method="post">

			<if(data.book.id)>
				<input type="hidden" id="id" name="id" value=`${data.book.id}`/>
				<input type="hidden" name="_method" value=`PUT`/>
			</if>
			<div>
					<label for="title">Title:</label>
					<input type="text" id="title" name="title" placeholder="book's title" value=`${data.book.title}` />
			</div>
			<div>
					<label for="price">Price:</label>
					<input type="text" id="price" name="price" placeholder="150.25" value=`${data.book.price}` />
			</div>
			<div>
					<label for="description">Description:</label>
					<textarea
						cols="20"
						rows="10"
						id="description"
						name="description"
						placeholder="Descrive the book's subject">
							${data.book.description}
					</textarea>
			</div>
			<input type="submit" value="Save" />
		</form>
	</body>
</html>
