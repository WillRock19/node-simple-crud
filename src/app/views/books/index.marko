<html>
	<head>
		<meta charset="utf-8">
	</head>
	<body>
		<h1>My books</h1>
		<table id="books">
			<thead>
				<th>Id</th>
				<th>Title</th>
				<th>Price</th>
				<th></th>
				<th></th>
			</thead>
			<tbody style="display: flex; flex-direction: column">
				<for|book, index| of=data.books>
					<tr id=`book_${book.id}`>
						<td>${book.id}</td>
						<td>${book.title}</td>
						<td>${book.price}</td>
						<td><a href="#">Edit</a></td>
						<td><a href="#" data-ref=`${book.id}` data-type="remove">Remove</a></td>
					</tr>
				</for>
			</tbody>
		</table>
		<script src="static/js/books/remove-book.js"></script>
	</body>
</html>
